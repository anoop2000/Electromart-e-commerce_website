<main class="main">
    <div class="container">
        <div class="thanxContent">
            <h1 class="display-4">Awesome!</h1>
            <h4>Your order is confirmed. We'll notify you once it's shipped!</h4>
        </div>

        <div class="cartContent">
            <table class="table">
                <thead>
                    <tr>
                        <th>Product Image</th>
                        <th>Product Name</th>
                        <th>Sale Price x Quantity</th>
                        <th>Final Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <% cartData.forEach((item) => { %>
                    <tr>
                        <td>
                            <img
                                src="/uploads/re-image/<%= item.productId.productImage[0] %>"
                                alt="<%= item.productId.productName %>"
                                class="product-img"
                            />
                        </td>
                        <td><%= item.productId.productName %></td>
                        <td>₹<%= item.productId.salePrice %> x <%= item.quantity %></td>
                        <td>₹<%= item.productId.salePrice * item.quantity %></td>
                    </tr>
                    <% }); %>
        
                    
                    </tr>
                </tbody>
            </table>
        </div>
        
