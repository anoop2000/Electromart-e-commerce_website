document.querySelectorAll('.cancel-order-button').forEach(button => {
  button.addEventListener('click', async () => {
    const orderId = button.getAttribute('data-order-id');

    // Check the current status of the order
    const statusCell = document.querySelector(`#order-row-${orderId} .label`);
    if (statusCell && statusCell.textContent.trim().toLowerCase() === 'cancelled') {
      Swal.fire({
        icon: 'info',
        title: 'Order Already Cancelled',
        text: 'This order cannot be cancelled because it is already in a cancelled state.'
      });
      return; // Stop further execution
    }

    const result = await Swal.fire({
      title: 'Are you sure?',
      text: 'Do you want to cancel the order?',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, cancel it!'
    });

    if (result.isConfirmed) {
      try {
        // Make API call to update the order status to "Cancelled"
        const response = await fetch(`/cancelOrder/${orderId}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            Authorization: `Bearer ${localStorage.getItem('token')}`
          }
        });

        const data = await response.json();

        if (response.status === 200) {
          // Update the status cell to show "Cancelled"
          if (statusCell) {
            statusCell.classList.remove('badge-primary', 'badge-success');
            statusCell.classList.add('badge-danger');
            statusCell.textContent = 'Cancelled';
          }

          // Show success Swal
          Swal.fire({
            icon: 'success',
            title: 'Order Cancelled',
            text: data.message
          }).then(() => {
            // Open modal to add cancellation reason
            const modal = new bootstrap.Modal(document.getElementById('cancelReasonModal'));
            modal.show();

            // Handle reason submission
            document.getElementById('cancelReasonForm').onsubmit = async (e) => {
              e.preventDefault();
              const reason = document.getElementById('reason').value;

              // Make API call to save the cancellation reason
              const reasonResponse = await fetch(`/cancelOrderReason/${orderId}`, {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                  Authorization: `Bearer ${localStorage.getItem('token')}`
                },
                body: JSON.stringify({ reason })
              });

              const reasonData = await reasonResponse.json();

              if (reasonResponse.status === 200) {
                Swal.fire({
                  icon: 'success',
                  title: 'Reason Saved',
                  text: reasonData.message
                }).then(() => {
                  modal.hide();
                });
              } else {
                Swal.fire({
                  icon: 'error',
                  title: 'Error Saving Reason',
                  text: reasonData.message
                });
              }
            };
          });
        } else {
