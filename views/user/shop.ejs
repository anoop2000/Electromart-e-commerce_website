<script>
  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll(".wishlist-btn").forEach(button => {
      button.addEventListener("click", async (event) => {
        event.preventDefault(); 

        const productId = button.getAttribute("data-product-id");

        try {
          const response = await fetch('/addToWishlist', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productId })
          });

          const result = await response.json();

          if (result.status) {
            Swal.fire({
              icon: 'success',
              title: 'Success',
              text: result.message,
            });
          } else {
            Swal.fire({
              icon: 'info',
              title: 'Oops!',
              text: result.message,
            });
          }
        } catch (error) {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Something went wrong! Please try again later.',
          });
        }
      });
    });
  });
</script>

<script>
  // Show or hide the "clear" button based on input value
  function toggleClearButton() {
    const searchInput = document.getElementById('searchInput');
    const clearButton = document.getElementById('clearButton');
    if (searchInput.value.trim() !== '') {
      clearButton.style.display = 'inline';
    } else {
      clearButton.style.display = 'none';
    }
  }

  // Clear the search input field and hide the "clear" button
  function clearSearchInput() {
    const searchInput = document.getElementById('searchInput');
    searchInput.value = '';
    toggleClearButton(); // Hide the "X" button after clearing the input
  }

  // Initialize the clear button visibility on page load
  document.addEventListener('DOMContentLoaded', () => {
    toggleClearButton();
  });
</script>




